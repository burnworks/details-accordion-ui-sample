            }

            .summary-icon {
                @apply flex shrink-0 h-6 items-center text-gray-600;

                .open-icon {
                    @apply block h-6 w-6;
                }

                .close-icon {
                    @apply hidden h-6 w-6;
                }
            }

            &[open] {
                .summary-icon {
                    .open-icon {
                        @apply hidden;
                    }

                    .close-icon {
                        @apply block;
                    }
                }
            }

            &.sub-details {
                @apply border-t border-gray-900/10;

                summary {
                    @apply bg-gray-50/80;
                }

                .summary-icon {
                    .arrow-icon {
                        @apply w-6 h-6 transition-transform;
                    }
                }
                
                &[open] {
                    .summary-icon {
                        .arrow-icon {
                            @apply rotate-180;
                        }
                    }
                }
            }

            .details-text {
                @apply text-gray-700;

                ul {
                    @apply list-none;

                    li {
                        a {
                            @apply px-6 py-3 flex justify-between items-center space-x-4 no-underline transition-colors;
                            
                            &:hover {
                                @apply bg-gray-50/80;
                            }
                        }

                        svg {
                            @apply shrink-0 w-6 h-4;
                        }
                    }
                }
            }
        }
    }
</style>